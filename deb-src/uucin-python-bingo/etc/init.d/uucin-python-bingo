#!/bin/bash
. /lib/lsb/init-functions

PATH=/usr/local/sbin:/usr/local/bin:/sbin:/bin:/usr/sbin:/usr/bin

NAME=uucin-python-bingo

check_and_reload_nginx()
{
	service nginx configtest > /dev/null 2>&1

	if [ 0 -ne $? ]
	then
		log_failure_msg "$NAME nginx test is failure,plz nginx -t"
		exit 1
	else
		service nginx reload > /dev/null
		service nginx start > /dev/null
	fi
}

start()
{
        supervisorctl start bingo:* > /dev/null
	
	if [ -f /etc/nginx/sites-enabled/uucin-python-bingo-conf ]
        then
                log_success_msg "$NAME is already running"
                exit 0
        fi
	ln -s /etc/nginx/sites-available/uucin-python-bingo-conf /etc/nginx/sites-enabled/uucin-python-bingo-conf
	check_and_reload_nginx
	log_success_msg "$NAME is start ok"
}
stop()
{
        supervisorctl stop bingo:* > /dev/null
	rm -f /etc/nginx/sites-enabled/uucin-python-bingo-conf
	check_and_reload_nginx
        log_success_msg "$NAME is stop ok"
}
case "$1" in

        start)
                start
                ;;
        stop)
                stop
                ;;
        restart)
		stop
		start
                ;;
        *)
            echo "Usage: $0 in start stop restart"
	    exit 1
	    ;;
esac
